    "noEmit": false,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./src/js",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/ts/**.*ts"]
}
